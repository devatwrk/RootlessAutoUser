<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/style_signup"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_gradient">

        <RelativeLayout
            android:id="@+id/relative_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/plate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/plate_number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plate_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/plate_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold"  />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_one"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/year"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/year_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_three"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_two"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/model"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/model_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/model_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_three"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/engine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/engine"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/engine_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/engine_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_five"
            android:layout_below="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/colour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/colour_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/colour_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_siz"
            android:layout_below="@+id/relative_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/mileage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/mileage"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mileage_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/mileage_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/relative_siz"
             android:orientation="vertical"
             android:padding="1dp">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/bg_card_edit_gradient"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:padding="5dp">

                 <ImageView
                     android:id="@+id/edit_iv"
                     android:layout_width="34dp"
                     android:layout_height="34dp"
                     android:layout_marginEnd="5dp"
                     android:src="@drawable/ic_car_repair_five" />

                 <ImageView
                     android:id="@+id/delete_iv"
                     android:layout_width="34dp"
                     android:layout_height="34dp"
                     android:layout_marginStart="10dp"
                     android:layout_toEndOf="@+id/edit_iv"
                     android:src="@drawable/ic_car_delete" />


             </RelativeLayout>

         </LinearLayout>

    </RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/style_signup"
    android:foreground="?selectableItemBackground"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_gradient">

        <RelativeLayout
            android:id="@+id/relative_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/date_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold"  />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_one"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/car"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/car_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_three"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_two"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/model"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/model_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/model_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_three"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/engine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/engine"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/engine_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/engine_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_five"
            android:layout_below="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/services_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/services"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/services_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/services_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_siz"
            android:layout_below="@+id/relative_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/price_tv"
                android:padding="10dp"
                android:text="XXXX"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>


